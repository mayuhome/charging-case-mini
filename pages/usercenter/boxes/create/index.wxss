.page{
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F7FAFA;
}
.custom-navbar {
  position: relative;
  top: 0;
  width: 100%;
  z-index: 10;
}
.content{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: start;
  overflow: auto;
  background: #F7FAFA;
  padding: 32rpx;
}

.container {
    background: #fff;
    border-radius: 8px;
    padding: 16px;
    margin: 12px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  .submit-btn {
    width: 100%;
    height: 40px;
    background-color: #007aff;
    color: #fff;
    font-size: 16px;
    text-align: center;
    border-radius: 4px;
    margin-top: 16px;
  }