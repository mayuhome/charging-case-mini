<view class="container">
  <!-- 表单 -->
  <view class="form">
    <!-- 手机号 -->
    <van-cell-group>
      <van-field
    value="{{ phone }}"
    label="手机号"
    required
    bind:input="onInput"
    data-field="phone"
    placeholder="请输入手机号"
  />

  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
  />
  <van-field
    value="{{ deviceIds }}"
    label="设备编号"
    required
    placeholder="请输入设备编号"
  />
      <!-- 姓名 -->
      <van-field
    value="{{ username }}"
    label="用户名"
    placeholder="请输入用户名"
  />
  <van-field
    value="{{ address }}"
    label="地址"
    placeholder="请输入地址"
  />
  <van-field
    value="{{ profitShare }}"
    label="分成比例"
    placeholder="请输入分成比例"
  />
  <van-cell class="active-cell" title="激活"><van-switch checked size="20px" active-color="#07c160"/></van-cell>
</van-cell-group>


  </view>

  <!-- 提交按钮 -->
  <button class="submit-btn" bindtap="onSubmit">提交</button>
</view>
