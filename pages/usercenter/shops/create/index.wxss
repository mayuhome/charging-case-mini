.container {
  padding: 16px;
}

.form {
  background: #fff;
  border-radius: 8px;
  padding: 16px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 16px;
}

.label {
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}

.input {
  width: 100%;
  height: 40px;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
}

.add-device-btn {
  margin-top: 8px;
  font-size: 14px;
  color: #007aff;
}

.submit-btn {
  width: 100%;
  height: 40px;
  background-color: #007aff;
  color: #fff;
  font-size: 16px;
  text-align: center;
  border-radius: 4px;
  margin-top: 16px;
}
.active-cell {
  display: flex;
  justify-content: flex-start;
}