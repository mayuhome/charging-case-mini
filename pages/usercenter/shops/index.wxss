.container {
  padding: 16px;
  background: #F7FAFA;
}

.header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20px;
}

.search-input {
  flex: 1;
  height: 32px;
  padding: 8px;
  border-radius: 4px;
  border: 1px solid #ccc;
  background-color: #ffffff;
}

.create-user-btn {
  padding: 8px 16px;
  background-color: #007aff;
  color: white;
  border-radius: 4px;
}
.card-container {
  padding: 16px;
  margin: 12px;
  border-radius: 12px;
  /* background: linear-gradient(135deg, #f0d9bb66, #f8b96735, #e4b98188); */
  background: linear-gradient(135deg, #2BC0E467,#EAECC667);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  color: #333;
}
.card-field {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
  font-size: 16px;
  color: #555;
}
.card-edit-icon {
  position: absolute;
  top: 12px;
  right: 12px;
  font-size: 20px;
  color: #fff;
  cursor: pointer;
}