.card-container {
  padding: 16px;
  margin: 12px;
  border-radius: 12px;
  background: linear-gradient(135deg, #FFD194, #D1913C);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.card-field {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
  font-size: 16px;
  color: #333;
}
.card-edit-icon {
  position: absolute;
  top: 12px;
  right: 12px;
  font-size: 20px;
  color: #555;
  cursor: pointer;
}