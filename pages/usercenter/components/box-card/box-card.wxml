<view class="card">
        <view class="title field">
        <label for="">编号</label>
        <text>{{boxInfo.code}}</text>
        </view>
    <!-- <view class="card-content"> -->
        <view class="field desc">
            <text>地址</text>
            <text>{{boxInfo.address}}</text>
        </view>
                <view class="field desc">
            <text>分成比例</text>
            <text>{{boxInfo.profitShare}}</text>
        </view>
            <view class="field desc">
            <text>状态</text>
            <t-tag class="margin-16" wx:if="{{boxInfo.isActive}}" variant="light-outline" theme="success">已绑定</t-tag>
            <t-tag class="margin-16" wx:else variant="light-outline" theme="danger">未绑定</t-tag>
        </view>
                        <view class="field desc">
            <text>商户手机</text>
            <text>{{boxInfo.user.phone}}</text>

        </view>
                    <view class="field desc">
            <text>商户状态</text>
            <t-tag class="margin-16" wx:if="{{boxInfo.user.isActive}}" variant="light-outline" theme="success">激活</t-tag>
            <t-tag class="margin-16" wx:else variant="light-outline" theme="danger">未激活</t-tag>
        </view>
    <!-- </view> -->
    <view class="btns">
        <button class="sub-button" style="background: #f87171;" bindtap="handlePasswordModal">更换密码</button>
        <button class="sub-button sub-button--yellow" style="background: #fbbf24;" bindtap="handleUpdateInfo">更新信息</button>
    </view>
</view>

<t-popup visible="{{passwordVisible}}" bind:visible-change="onPasswordVisibleChange" placement="bottom">
  <view class="block">
    <view class="header">
      <view class="btn btn--cancel" aria-role="button" bindtap="handleCancel">取消</view>
      <view class="popup-title">更换密码</view>
      <view class="btn btn--confirm" aria-role="button" bindtap="handlePasswordConfirm">确定</view>
    </view>
    <view class="popup-form">
        <van-cell-group>
            <van-field
                value="{{ password }}"
                bind:input="onInput"
                type="password"
                label="新密码"
                placeholder="请输入新密码"
                data-field="password"
                required
                size="large"
            />
            <van-field
            value="{{ confirmPassword }}"
            bind:input="onInput"
            type="password"
            label="确认密码"
            placeholder="请确认密码"
            data-field="confirmPassword"
            required
            size="large"
        />
        </van-cell-group>
    </view>
  </view>
</t-popup>

<t-popup visible="{{boxInfoVisible}}" bind:visible-change="onboxInfoVisibleChange" placement="bottom">
  <view class="block">
    <view class="header">
      <view class="btn btn--cancel" aria-role="button" bindtap="handleCancel">取消</view>
      <view class="popup-title">更新用户信息</view>
      <view class="btn btn--confirm" aria-role="button" bindtap="handleUpdateboxInfoConfirm">确定</view>
    </view>

    <view class="popup-form">
        <van-cell-group>
            <van-field
                value="{{ updateName }}"
                bind:input="onInput"
                type="text"
                label="姓名"
                data-field="updateName"
                required
                size="large"
            />
            <van-cell class="active-cell" title="状态" size="large"><van-switch checked="{{updateIsActive}}" data-field="updateIsActive" size="large" bind:change="onInput" size="20px" active-color="#07c160"/></van-cell>
        </van-cell-group>
    </view>      
  </view>
</t-popup>