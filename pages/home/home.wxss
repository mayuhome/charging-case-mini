/* 确保页面基础设置 */
page {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  position: relative;
}

/* 所有滚动容器统一设置 */
scroll-view {
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch; /* iOS 滚动顺滑 */
}
.page-container {
  width: 100vw;
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f5f5f5;
