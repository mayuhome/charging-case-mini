.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #F7FAFA;
}
.custom-navbar {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
}
.content{
  flex: 1;
  margin-top: 80px;
  margin-bottom: 40px;
  overflow: auto;
  padding: 40rpx;
  background-color: #fff;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  width: 100%;
  /* padding: 20px; */
}

.header .title {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 100rpx;
}

.header .subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.banner {
  width: 100%;
  /* margin: 3% auto; */
  height: 400rpx;
  border-radius: 16px;
  margin-bottom: 80rpx;
}

.section {
  margin-bottom: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.features {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 24rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-card {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}
.t-tab-bar{
  position: fixed;
  bottom: 0;
  width: 100%;
}