.container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f6f6f6;
}

.form-container {
  width: 80%;
  max-width: 600rpx;
  background-color: #ffffff;
  padding: 40rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.login-button {
  margin-top: 30rpx;
}
