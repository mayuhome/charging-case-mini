.main {
  width: 100vw;
  height: 100vh;
  opacity: 1;

  /* 自动布局 */
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
}

.title{
  width: 100%;
  height: 36px;
}

.content {
  /* 自动布局子元素 */
width: 350px;
height: 280px;
padding: 24px;
margin: 24px;
border-radius: 12px;
opacity: 1;
	
/* 自动布局 */
display: flex;
flex-direction: column;
padding: 24px;
gap: 0px 10px;
flex-wrap: wrap;
align-content: flex-start;
	
background: linear-gradient(0deg, rgba(0, 0, 0, 0.001), rgba(0, 0, 0, 0.001)), rgba(255, 255, 255, 0.7);
	
box-sizing: border-box;
border: 1px solid #CCFBF1;
	
backdrop-filter: blur(4px);
box-shadow: 0px 4px 6px -4px rgba(0, 0, 0, 0.1),0px 10px 15px -3px rgba(0, 0, 0, 0.1);
	
z-index: 1;

font-size: 14px;
}

.title {
  font-size: 30px;
  color: #FFF;
  text-align: center;
  line-height: 36px;
}

.content .field {
  margin-bottom: 12px;
}
.content .field label {
  /* margin: 4px 0; */
  display: block;
  margin-bottom: 6px;
  color: #888484;
}
.content .field input {
  background-color: #fff;
  border-radius: 4px;
  height: 40px;
  padding: 0 8px;
  margin-bottom: 8px;
}
.btn{
  /* display: block; */
  width: 100%;
  /* height: 30px; */
  border-radius: 4px;
  /* padding: 12px 0; */
  background: #4CB5AB;
  color: #fff;

  text-align: center;
}
.background-image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}